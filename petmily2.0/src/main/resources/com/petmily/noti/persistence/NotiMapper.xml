<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.petmily.noti.persistence.NotiMapper">

	<insert id="insertNoti" parameterType="com.petmily.noti.domain.NotiVO">
		INSERT INTO alert_tb VALUES (NOTI_SEQ.nextval,sysdate,null,#{alertCode},#{memId},#{boardNo},#{memToId},'N')
	</insert>


	<select id="listNoti" parameterType="com.petmily.noti.domain.NotiVO" resultType="com.petmily.noti.domain.NotiVO">
		select * from alert_tb where MEM_ID=#{memId} AND delete_yn = #{deleteYn} ORDER BY ALERT_NO DESC 

	</select>

	<update id="deleteNoti" parameterType="com.petmily.noti.domain.NotiVO">
		update alert_tb set delete_yn = 'Y' where MEM_ID=#{memId} AND ALERT_NO = #{alertNo}
	</update>

</mapper>
